<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="44dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".presentation.AccountFragment"
    tools:showIn="@layout/fragment_account">

    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/large_text" />-->
        <TextView
            android:text="Email: "
            android:textColor="@android:color/black"
            android:id="@+id/email_label"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="johndoe@gmail.com"
            android:padding="5dp"
            android:id="@+id/accountEmail"
            android:layout_toRightOf="@id/email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Phone Number:"
            android:textColor="@android:color/black"
            android:id="@+id/phone_label"
            android:padding="5dp"
            android:layout_below="@+id/email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="919909090"
            android:id="@+id/accountPhone"
            android:padding="5dp"
            android:layout_below="@+id/email_label"
            android:layout_toRightOf="@+id/phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Firebase Id:"
            android:textColor="@android:color/black"
            android:id="@+id/id_label"
            android:padding="5dp"
            android:layout_below="@+id/phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="asdflkjsdffsadl2343lkj432"
            android:id="@+id/accountId"
            android:padding="5dp"
            android:layout_below="@+id/phone_label"
            android:textIsSelectable="true"
            android:layout_toRightOf="@+id/id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>